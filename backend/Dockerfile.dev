# Backend Development Dockerfile - with hot reload
FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONFAULTHANDLER=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy weather package
COPY weather/pyproject.toml weather/README.md /app/weather/
COPY weather/src /app/weather/src

# Install weather package in editable mode
RUN pip install -e /app/weather

# Copy backend requirements and install
COPY backend/requirements.txt /app/backend/
RUN pip install -r /app/backend/requirements.txt

# Copy backend application
COPY backend/app /app/backend/app

WORKDIR /app/backend

EXPOSE 8000

# Run with hot reload
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

