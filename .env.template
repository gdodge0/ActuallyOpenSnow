# ActuallyOpenSnow Environment Configuration
# Copy this file to .env and fill in your values.
# Used by PyCharm run configurations and local development.

# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/actuallyopensnow

# Redis
REDIS_URL=redis://localhost:6379/0

# Engine-backend URL (for backend to proxy custom coordinate requests)
ENGINE_BACKEND_URL=http://localhost:8001

# GRIB2 cache directory (engine only)
GRIB_CACHE_DIR=./grib-cache

# Backend mode (development | production)
ENVIRONMENT=development
